function qualityPoints(value)



{ if(value<60){ document.writeln("F"); }else if(value<70){ document.writeln("D"); }else if(value<80){ document.writeln("C"); }else if(value<90){ document.writeln("B"); }else if(value<100){ document.writeln("A"); }else{ document.writeln("Aldaatai dun"); } }





